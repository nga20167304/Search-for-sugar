<header role="banner">
  <div class="header-title">
    <h1>糖質量検索</h1>
  </div>
  <div class="header-search">
    <%= search_form_for @q do |f| %>
      <%= f.search_field :name_cont, :placeholder => 'トマト' %>

      <%= f.submit "検索" %>
    <% end %>
  </div>
  <div class="header-search-with-category">
    <%= link_to "食材カテゴリーから検索", categories_path, data: { turbolinks: false } %>
  </div>
</header>
